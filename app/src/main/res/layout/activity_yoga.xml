<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Yoga">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:fontFamily="serif"
            android:text="Want to relieve your stress?"
            android:textColor="#1B0D0D"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:fontFamily="serif"
            android:text="      Try These Asanas"
            android:textColor="#2E1B1B"
            android:textSize="34sp" />

        <ImageButton
            android:id="@+id/bala_btn"
            android:layout_width="match_parent"
            android:layout_height="238dp"
            app:srcCompat="@drawable/balasana" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="             Balasana(Child's Pose)"
            android:textColor="#352323"
            android:textSize="24sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <ImageButton
            android:id="@+id/vipa_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/viparita" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Viparita Karani(inverted lake pose)"
            android:textColor="#201515"
            android:textSize="24sp" />
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <ImageButton
            android:id="@+id/sukha_btn"
            android:layout_width="match_parent"
            android:layout_height="593dp"
            app:srcCompat="@drawable/sukhasana" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="             Sukhasana(Easy Pose)"
            android:textColor="#251818"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/biti_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bitilasana" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="        Bitilasana(Cow's Pose)"
            android:textColor="#301E1E"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/tada_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tadasana" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="          Tadasana(Mountain pose)"
            android:textColor="#3C2929"
            android:textSize="24sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>
</ScrollView>